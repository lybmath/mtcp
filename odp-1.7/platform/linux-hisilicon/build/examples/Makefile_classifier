ODP_EXAMPLE_CLASSIFIER_PATH := $(EXAMPLE_DIR)/classifier
 
ODP_EXAMPLE_CLASSIFIER_INC += -I$(ODP_EXAMPLE_CLASSIFIER_PATH)

ODP_EXAMPLE_CLASSIFIER_CFLAGS := $(ODP_EXAMPLE_CFLAGS) -lodp -L$(OUTPUT_LIB_DIR)
ODP_EXAMPLE_CLASSIFIER_CFLAGS += $(ODP_EXAMPLE_CLASSIFIER_INC) $(EXTRA_LIB)



# 编译example/packet
odp_example_classifier : $(OUTPUT_EXAMPLE_DIR)/odp_classifier	
$(OUTPUT_EXAMPLE_DIR)/odp_classifier : $(ODP_EXAMPLE_CLASSIFIER_PATH)/odp_classifier.c $(EXTRA_LIB)
	-$(RM) $(OUTPUT_EXAMPLE_DIR)/odp_classifier
	$(CC) $(ODP_EXAMPLE_CLASSIFIER_CFLAGS) $^ -o $@
	$(OBJDUMP) -D $(OUTPUT_EXAMPLE_DIR)/odp_classifier > $(OUTPUT_EXAMPLE_DIR)/odp_classifier.s	

odp_example_classifier_clean :
	-$(RM) $(ODP_EXAMPLE_CLASSIFIER_PATH)/*.o
	-$(RM) $(OUTPUT_EXAMPLE_DIR)/odp_classifier
	-$(RM) $(OUTPUT_EXAMPLE_DIR)/odp_classifier.s
