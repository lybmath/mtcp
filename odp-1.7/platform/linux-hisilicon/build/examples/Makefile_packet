ODP_EXAMPLE_PACKET_PATH := $(EXAMPLE_DIR)/packet
 
ODP_EXAMPLE_PACKET_INC += -I$(ODP_EXAMPLE_PACKET_PATH)

ODP_EXAMPLE_PACKET_CFLAGS := $(ODP_EXAMPLE_CFLAGS) -lodp -L$(OUTPUT_LIB_DIR)
ODP_EXAMPLE_PACKET_CFLAGS += $(ODP_EXAMPLE_PACKET_INC) $(EXTRA_LIB)



# 编译example/packet
odp_example_packet : $(OUTPUT_EXAMPLE_DIR)/odp_pktio	
$(OUTPUT_EXAMPLE_DIR)/odp_pktio : $(ODP_EXAMPLE_PACKET_PATH)/odp_pktio.c $(EXTRA_LIB)
	-$(RM) $(OUTPUT_EXAMPLE_DIR)/odp_pktio
	$(CC) $(ODP_EXAMPLE_PACKET_CFLAGS) $^ -o $@
	$(OBJDUMP) -D $(OUTPUT_EXAMPLE_DIR)/odp_pktio > $(OUTPUT_EXAMPLE_DIR)/odp_pktio.s	

odp_example_packet_clean :
	-$(RM) $(ODP_EXAMPLE_PACKET_PATH)/*.o
	-$(RM) $(OUTPUT_EXAMPLE_DIR)/odp_pktio
	-$(RM) $(OUTPUT_EXAMPLE_DIR)/odp_pktio.s
